@page
@model Workerapp.Pages.UserUsage.DetailsModel

@{
    ViewData["Title"] = "Details";
}
    <input type="hidden" asp-for="User.Id" />
<h1>
    Details
</h1>
<div>
    Workers
</div>
<div>
    @if (Model.User.Role == Models.User.RoleBar.Seller)
    {
        <form method="get">

                <table class="table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Workers.FirstOrDefault().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Workers.FirstOrDefault().Surname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Workers.FirstOrDefault().Experience)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Workers.FirstOrDefault().PhoneNumber)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

            </form>
            <tbody>
                @foreach (var item in Model.Workers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Experience)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                    </tr>
                }

            </tbody>
    }
        </div>
<div>
    @if (Model.User.Role == Models.User.RoleBar.Buyer)
    {
            <h4>User</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Surname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Surname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.Role)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Role)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User.IsActive)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.IsActive)
                </dd>
            </dl>

    }
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>