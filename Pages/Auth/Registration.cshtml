@page
@model WorkersApp.Auth.RegistrationModel
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div class="form-group">
                <div>
                    <label asp-for="User.Name"></label>
                    <input asp-for="User.Name" class="form-control" />
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="User.Surname"></label>
                    <input asp-for="User.Surname" class="form-control" />
                    <span asp-validation-for="User.Surname" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="User.Email"></label>
                    <input asp-for="User.Email" class="form-control" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
                <span class="text-danger">
                    @Html.DisplayFor(m => Model.ErrorHandler)
                    </span>
                    <div class="form-group">
                        <label asp-for="User.Password"></label>
                        <input asp-for="User.Password" class="form-control" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <label asp-for="User.IsSeller"></label>
                    <input asp-for="User.IsSeller" type="checkbox" checked data-toggle="toggle">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>